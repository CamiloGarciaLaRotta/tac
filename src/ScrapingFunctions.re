/** I honestly, for the love of god cannot find a better way to check if something is null,
using this sketchy solution until I figure this out (asked on reason discord)  */
let validateNonNull = x =>
  switch (Js.String.make(x)) {
  | "null" => failwith("Value is null")
  | _ => x
  };

let toStringProcess = x => Js.String.make(x);

let validateUrl = x => {
  let stringUrl = Js.String.make(x |> validateNonNull);
  Js.Re.test(stringUrl, Js.Re.fromString(regexStringConstant)) ?
    x : failwith("Invalid URL");
};